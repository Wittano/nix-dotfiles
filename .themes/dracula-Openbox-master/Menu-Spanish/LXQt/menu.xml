<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu
    xmlns="http://openbox.org/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://openbox.org/
    file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">
        <item label="Terminal">
            <action name="Execute">
                <execute>x-terminal-emulator</execute>
            </action>
        </item>
        <item label="Navegador Web">
            <action name="Execute">
                <execute>x-www-browser</execute>
            </action>
        </item>
        <separator />
        <menu execute="openbox-menu lxqt-applications.menu" id="apps" label="Aplicaciones"/>
        <menu id="client-list-menu" />
        <separator />
        <item label="Configuración Openbox">
            <action name="Execute">
                <execute>obconf-qt</execute>
            </action>
        </item>
        <item label="Reconfigurar Openbox">
            <action name="Reconfigure" />
        </item>
        <separator />
        <menu id="exit" label="Salir" >
            <item label="Cerrar sesión">
                <action name="Exit" />
            </item>
            <item label="Suspender">
                <action name="Execute">
                    <execute>systemctl suspend</execute>
                </action>
            </item>
            <item label="Hibernar">
                <action name="Execute">
                    <execute>systemctl hibernate</execute>
                </action>
            </item>
            <item label="Reiniciar">
                <action name="Execute">
                    <execute>systemctl reboot</execute>
                </action>
            </item>
            <item label="Apagar">
                <action name="Execute">
                    <execute>systemctl poweroff</execute>
                </action>
            </item>
        </menu>
    </menu>
</openbox_menu>
